<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="inventory">

	<!-- has a 관계 설정 -->
	<resultMap type="inventory" id="inventoryRM">
		<result property="product.pno" column="pno"/>
	</resultMap>

	<!-- 재고 목록 조회 -->
	<select id="getInventoryList" resultType="com.ibcompany.dto.Inventory">
		select * from ckinventory order by resdate desc
		<!-- limit #{startRowNumber}, #{contentNumberPerPage} -->
	</select>
	
	<!-- 총 재고 게시물 수 -->
	<select id="maxNum" resultType="int">
		select count(*) from inventory
	</select>
	
	<!-- 재고 상세 보기 -->
	<select id="getInventory" resultType="com.ibcompany.dto.Inventory">
		select * from ckinventory where ino=#{ino}
	</select>
	
	<!-- 재고 등록 -->
	<insert id="insInventory" parameterType="com.ibcompany.dto.Inventory">
		insert into inventory values (default, #{pno}, #{inprice}, #{outprice}, #{amount}, #{remark}, default)
	</insert>
	
	<!-- 재고 변경 -->
	<update id="upInventoryAll" parameterType="com.ibcompany.dto.Inventory">
		update inventory set inprice=#{inprice}, outprice=#{outprice}, amount=#{amount}, remark=#{remark} where ino=#{ino}
	</update>
	
	<!-- 재고 삭제 -->
	<delete id="delInventory">
		delete from inventory where ino=#{ino}
	</delete>
</mapper>