<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">
	<select id="getMemberList" resultType="com.ibcompany.dto.Member">
		select * from member
	</select>
	<select id="maxNum" resultType="int">
		select count(*) from member
	</select>
	<select id="getMember" resultType="com.ibcompany.dto.Member">
		select * from member where id=#{id}
	</select>
	<insert id="insMember">
		insert into member values (#{id}, #{pw}, #{name}, #{email}, #{tel}, #{addr}, #{postcode}, default)
	</insert>
	<update id="upPw">
		update member set pw=#{pw},  where id=#{id}
	</update>
	<update id="upInfo">
		update member set name=#{name}, email=#{email}, tel=#{tel}, addr=#{addr}, postcode=#{postcode} where id=#{id}
	</update>
	<delete id="delMember">
		delete from member where id=#{id}
	</delete>
</mapper>